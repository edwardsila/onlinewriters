<div id="token-loader">
    <div class="token-loader"></div>
</div>
<style>
    #token-loader {
        position: fixed;
        height: 100vh;
        width: 100vw;
        display: grid;
        align-items: center;
        text-align: center;
        z-index: 1000;
        top: 0px;
        right: 0px;
        background: none white;
    }
    .token-loader {
        height: 200px;
        width: 200px;
        background: url(/images/loader.svg);
        margin: 0px auto;
    }
</style>
<script>
    fetch('/account/info', {
        method: 'GET'
    }).then(res => {
        return res.json();
    }).then(user => {
        if (!user || user.error || !user.tokens || user.tokens < 1) { // Check if user has enough Word Coins
            location.href = '/token/insufficient';
        } else {
            document.getElementById('token-loader').style.display = 'none';
        }
    }).catch(err => {
        location.href = '/token';
    });
</script>
