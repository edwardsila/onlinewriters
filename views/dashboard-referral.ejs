                  </div>
                </div>
              <div id="referralMessage" style="display: none;">
                Use this invitation code <strong><%= user.referral %></strong> on sign up and get KES 150 when you get verified!
              </div>
              <div class="e-a-content"
                style="display: grid; grid-template-columns: 1fr auto auto; gap: 10px; width: fit-content;">
                <textarea name="about" id="referral-code" rows="1" style="resize: none;"
                  disabled><%= user.referral %></textarea>
                <button id="copyButton" class="bg-gradient-primary" style="border-radius: 3px; padding: 1px 10px;"
                  title="copy"><i id="fa-copy-2" class="fas fa-copy"></i></button>
                <button id="shareButton" class="bg-gradient-success" style="border-radius: 3px; padding: 1px 10px;"
                  title="share"><i class="fas fa-share-from-square" id="fa-share-2"></i></button>
              </div>
            </div>
            <script>
              /* Get the text of the referral code element */
              var referralCodeElement = document.getElementById('referralMessage');
              var referralCodeText = referralCodeElement.textContent || referralCodeElement.innerText;
              const inviteCode = document.getElementById("referral-code").value;
              const copyButton = document.getElementById('copyButton');
              function copyCode(){
                /* Create a temporary input element and set its value to the referral code text */
                var tempInput = document.createElement('input');
                tempInput.setAttribute('value', referralCodeText);
                document.body.appendChild(tempInput);

                /* Select and copy the text from the temporary input element */
                tempInput.select();
                document.execCommand('copy');
                /* Remove the temporary input element */
                document.body.removeChild(tempInput);

              }
              const copyRefCode = document.getElementById('copyRefCode');
              copyRefCode.addEventListener('click', ()=>{
                copyCode();
                copyRefCode.classList.remove('fa-copy');
                copyRefCode.classList.add('fa-check')
                setTimeout(() => {
                  copyRefCode.classList.add('fa-copy');
                  copyRefCode.classList.remove('fa-check')
                }, 5000);
              })
              copyButton.addEventListener('click', () => {
                

                copyCode()
                /* Provide feedback to the user that the code has been copied (you can customize this) */
                document.getElementById("fa-copy-2").classList.remove("fa-copy");
                document.getElementById("fa-copy-2").classList.add("fa-check");
                setTimeout(()=>{
                  document.getElementById("fa-copy-2").classList.remove("fa-check");
                  document.getElementById("fa-copy-2").classList.add("fa-copy");
                }, 5000)
              })

              const shareButton = document.getElementById('shareButton');
              shareButton.addEventListener("click", ()=>{
                const title = "Invite your friends to WorkHub Writers";
                const text = referralCodeText;
                const url = `https://workhubwriters.com/join/${inviteCode}`;
                console.log(inviteCode);
                shareContent(title, text, url);
              })
              function shareContent(title, text, url) {
                // Check if the navigator.share API is available
                if (navigator.share) {
                  navigator.share({
                    title: title,
                    text: text,
                    url: url
                  })
                    .then(() => {
                      console.log("Shared successfully!");
                      
                    })
                    .catch((error) => {
                      console.error("Share failed:", error);
                    }).finally(()=>{
                      /* Provide feedback to the user that the code has been copied (you can customize this) */
                      document.getElementById("fa-share-2").classList.remove("fa-share-from-square");
                      document.getElementById("fa-share-2").classList.add("fa-check");
                
                      setTimeout(() => {
                        document.getElementById("fa-share-2").classList.remove("fa-check");
                        document.getElementById("fa-share-2").classList.add("fa-share-from-square");
                        console.clear();
                      }, 5000);
                    });
                } else {
                  // Handle cases where the navigator.share API is not supported
                  console.warn("navigator.share API is not available.");
                  // You can provide a fallback behavior here, such as showing a share button
                  // that opens a specific sharing page or another custom solution for sharing.
                }
              }

            </script>
