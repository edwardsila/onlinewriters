    <!-- fix the dates to match the local times -->
    <script>
      let dateElements = document.querySelectorAll('.toDateString');
      let timeElements = document.querySelectorAll('.toTimeString');

      dateElements.forEach(element => {
        element.innerHTML = new Date(element.innerText).toDateString();
      })
      timeElements.forEach(element => {
        const date = new Date(element.innerText);
        
        const formattedTime = date.toLocaleTimeString('en-US', {
            hour: 'numeric',
            minute: 'numeric',
            hour12: true
        });

        element.innerHTML = formattedTime;
      })
    </script>
